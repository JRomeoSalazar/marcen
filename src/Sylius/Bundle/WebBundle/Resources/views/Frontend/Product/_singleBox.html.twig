<div class="product-box">
    <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}">
        <img class="img-rounded img-responsive" src="{{ product.image ? product.image.path|imagine_filter('sylius_product_box') : 'http://placehold.it/262x160' }}" alt="{{ product.name }}" />
        <h4>{{ product.name|truncate(18) }}</h4>
        <span class="label label-primary">{{ sylius_calculate_price(product)|tax_rate(product.id)|sylius_price }}</span>
        <button class="btn btn-special btn-xs pull-right"><i class="icon-shopping-cart icon-white"></i> {{ 'sylius.add_to_cart'|trans }}</button>
    </a>
</div>
